<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Read me -->
    <Preference
        android:key="@string/preference_key_read_me"
        android:title="@string/preference_option_read_me" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:title="Save photos"
        android:key="preference_key_save_to_sdcard"
        android:summary="Check to save photos taken to the sdcard" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:title="Translate"
        android:key="preference_key_translate"
        android:summary="Check to translate descriptions into Japanese." />

</PreferenceScreen>