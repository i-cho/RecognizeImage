<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/smarteyeglass_control_width"
    android:layout_height="@dimen/smarteyeglass_control_height"
    android:background="@android:color/black">


    <TextView
        android:text="TextView"
        android:layout_height="@dimen/smarteyeglass_control_height"
        android:id="@+id/textResult"
        android:textSize="@dimen/smarteyeglass_text_size_normal"
        android:layout_marginLeft="6px"
        android:layout_marginRight="6px"
        android:layout_width="@dimen/text_result_width"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="@dimen/preview_image_width"
        android:layout_height="@dimen/preview_image_height"
        android:id="@+id/previewImage"
        android:background="#FF000000"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textResult" />


</RelativeLayout>